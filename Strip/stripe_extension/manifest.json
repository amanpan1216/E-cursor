{
  "manifest_version": 3,
  "name": "Stripe Toolkit",
  "version": "3.0.0",
  "description": "Advanced Stripe Checkout automation toolkit with auto-captcha click, result capture, proxy support, and session management",
  "author": "Strip Developer",
  "permissions": [
    "activeTab",
    "storage",
    "cookies",
    "scripting",
    "tabs",
    "clipboardRead",
    "clipboardWrite",
    "notifications",
    "proxy",
    "webRequest",
    "webRequestBlocking",
    "webRequestAuthProvider"
  ],
  "host_permissions": [
    "https://checkout.stripe.com/*",
    "https://api.stripe.com/*",
    "https://*.stripe.com/*",
    "https://js.stripe.com/*",
    "https://buy.stripe.com/*",
    "https://invoice.stripe.com/*",
    "https://billing.stripe.com/*",
    "https://hcaptcha.com/*",
    "https://*.hcaptcha.com/*",
    "https://2captcha.com/*",
    "https://api.anti-captcha.com/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*cs_live_*",
        "*://*/*cs_test_*",
        "https://checkout.stripe.com/*",
        "https://buy.stripe.com/*",
        "https://*.stripe.com/*",
        "*://*/*checkout/*",
        "*://invoice.stripe.com/*",
        "*://billing.stripe.com/*"
      ],
      "js": [
        "js/core/fingerprint.js",
        "js/core/antibot.js",
        "js/core/session.js",
        "js/modules/captcha-solver.js",
        "js/modules/three-ds-handler.js",
        "js/modules/payment-handler.js",
        "js/utils/utils.js",
        "js/content.js"
      ],
      "css": ["css/content.css"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "pages/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Stripe Toolkit"
  },
  "options_ui": {
    "page": "pages/settings.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "js/*",
        "css/*",
        "pages/*",
        "icons/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
